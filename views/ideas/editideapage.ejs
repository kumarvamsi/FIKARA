                    <textarea type="text" class="form-control"  rows="6" name="idea[description]" required><%= idea.description %></textarea>
                </div>
                <button class="btn btn-dark btn-block btn-md">Submit</button><br>
                <a href="/ideas/<%=idea._id  %>"class="btn btn-outline-info btn-sm" style="font-size: 12px;">goBack</a>
            </form>
            
        </div>
